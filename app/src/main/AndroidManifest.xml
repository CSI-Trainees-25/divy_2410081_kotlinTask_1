<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.csinectarui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Welcome Activity (Main Launcher) - MUST have exported=true -->
        <activity
            android:name=".WelcomeActivity"
            android:label="Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Sign In Activity - exported can be false since it's only used internally -->
        <activity
            android:name=".SignInActivity"
            android:label="Sign In"
            android:exported="false" />

        <activity android:name=".HomeScreenActivity" />

        <activity android:name=".BeveragesActivity" />


    </application>
</manifest>